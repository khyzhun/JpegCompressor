<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.review.ReviewFragment">

    <TextView
        android:id="@+id/tv_image_before_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:lines="1"
        tools:text="Image size: 1.2 MB"
        />

    <ImageView
        android:id="@+id/image_view_before"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:contentDescription="@string/selected_image_preview"
        android:layout_margin="16dp"
        android:background="@color/md_theme_outlineVariant"
        app:layout_constraintTop_toBottomOf="@id/tv_image_before_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_image_after_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_before"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:lines="1"
        tools:text="Image size: 1.2 MB"
        />

    <ImageView
        android:id="@+id/image_view_after"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:contentDescription="@string/selected_image_preview"
        android:layout_margin="16dp"
        android:background="@color/md_theme_outlineVariant"
        app:layout_constraintTop_toBottomOf="@id/tv_image_after_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>